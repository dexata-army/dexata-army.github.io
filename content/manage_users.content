			var user_data = {};

			if(localStorage.getItem(backup_username + '-refresh_speed'))
				user_data['-refresh_speed'] = localStorage.getItem(backup_username + '-refresh_speed');

			if(localStorage.getItem(backup_username + '-session_timeout'))
